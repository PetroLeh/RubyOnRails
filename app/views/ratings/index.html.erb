<p style="color: green"><%= notice %></p>

<h2>List of ratings</h2>

<%= link_to "New rating", new_rating_path %>
<p>Ratings: <%= @ratings.count %></p>
<div id="ratings">
<ul>
    <% @ratings.each do |rating| %>
    <li><%= render rating %><%= button_to 'delete', rating, method: :delete, form: { data: { turbo_confirm: 'Are you sure you want to delete this rating?' } } %></li>
    <% end %>
<ul>
</div>